{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", "schedule:earlyMondays"],
  "schedule": ["weekly"],
  "automerge": false,
  "labels": ["dependencies"],
  "commitMessagePrefix": "chore(deps): ",
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    }
  ]
}
