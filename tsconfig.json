{
  "compilerOptions": {
    "outDir": "dist/esm",
    "rootDir": "./src",
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES6",
    "declarationDir": "dist/types",
    "strict": true,
    "declaration": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "tests"]
}
